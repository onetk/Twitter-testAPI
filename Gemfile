# A sample Gemfile
source "https://rubygems.org"

gem 'rubocop'
gem 'ruby-debug-ide'
gem 'debase'
gem 'rcodetools'
gem 'fastri'

gem 'sinatra'
gem 'sinatra-contrib'

gem 'rake'
gem 'sinatra-activerecord'
gem 'bcrypt'

group :development do
  gem 'sqlite3','~> 1.3.6'
end

group :production do
  gem 'pg' , '~> 0.18'
end



# 公開されるとダメな大切な情報を管理する gem
gem 'dotenv'

# 今回はTwitterのAPIを使う際に oauth, json というgemを使う
gem 'json'
gem 'oauth'
